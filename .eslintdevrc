{
  "env": {
    "node": true
  },
  "sourceType": "module",
  "rules": {
    // Strict mode
    "strict": [2, "global"],

    // Code style,  0=off, 1=warning, 2=error
    "indent": [1, 2],
    "quotes": [1, "single"],
    "curly": [1, "multi-line"],
    "semi": [1, "never"],
    "space-unary-ops": [1, { "words": true, "nonwords": false }],
    "no-var": [0]
  }
}
